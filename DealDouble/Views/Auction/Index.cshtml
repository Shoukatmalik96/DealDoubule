@model DealDouble.Models.AuctionViewModel
@{
    ViewBag.Title = "Index";
}

    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <h5><i>Auctions</i></h5>
            </div>
            <div class="col-md-10">
                <div class="btn-toolbar justify-content-end" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group" role="group" aria-label="First group">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search Auctions........ !" aria-label="Input group example" aria-describedby="btnGroupAddon2">
                            <select class="custom-select" id="inputGroupSelect01">
                                <option selected>Choose auction Category ....</option>
                                <option value="1">Men</option>
                                <option value="2">Women</option>
                                <option value="3">Kids</option>
                            </select>
                        </div>
                        <button type="button" class="btn btn-outline-primary"> <i class="fas fa-trash-alt"></i> Clear</button>
                        <button type="button" class="btn btn-outline-secondary"> <i class="fas fa-power-off"></i> Reset</button>
                        <button type="button" class="btn btn-outline-info"><i class="fas fa-search"></i> Search</button>
                    </div>
                </div>
            </div>

        </div>
        <hr />
    </div>
    
@{ 
    Html.RenderAction("AuctionListing", new { categoryID = Model.categoryID, serchTerm = Model.searchTerm, pageNo = Model.pageNo, pageSize = Model.pageSize });
}

